@model List<ConnectMagar.Models.Person>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Main Content -->
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Advanced Software Engineering Project Phase 2 Will Be Contained Here</h1>
    
</div>

<!-- List -->
<div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
        @foreach (Person person in Model)
        {
            <div class="col">
          <div class="card shadow-sm">
            <img src="/img/persons/person5.jpg" class="bd-placeholder-img card-img-top" width="100%" height="180">
            
            <div class="card-body">
               <h5 class="card-title">@string.Format("{0} {1}",person.FirstName, person.LastName)</h5>
              <p class="card-text">Short Bio goes here.</p>
              <div class="card-text">
                <label>Nepal Address</label>
                <label>USA Address</label>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">Email</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Phone</button>
                </div>
                <small class="text-muted">9 mins ago</small>
              </div>
            </div>
          </div>
        </div>
        }
        
      </div>
    </div>
  </div>
