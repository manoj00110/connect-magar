@model ConnectMagar.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profile Page";
}
@if(!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if(!string.IsNullOrEmpty(ViewBag.Msg))
{
    <div class="alert alert-success">@ViewBag.Msg</div>
}
<form asp-controller="Home" asp-action="Profile" method="post">
    <div class="row">
        <div class="col-md-6">
            <label for="photo" class="form-label">Please select photo</label>
            <input type="file" class="form-control" id="photo" placeholder="photo">
        </div>
        <div class="col-md-6">
            <img src="...">
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-5">
            <label asp-for="Person.FirstName" class="form-label">First Name</label>
            <input type="text" class="form-control" asp-for="Person.FirstName" placeholder="first name">
        </div>
        <div class="col-md-5">
            <label asp-for="Person.LastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" asp-for="Person.LastName" placeholder="last name">
        </div>
        <div class="col-md-2">
            <label asp-for="Person.Gender" class="form-label">Gender</label>
            <select class="form-select" asp-for="Person.Gender">
                <option selected value="1">Male</option>
                <option value="0">Female</option>
            </select>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-6">
            <label asp-for="Person.Phone" class="form-label">Phone</label>
            <input type="tel" class="form-control" asp-for="Person.Phone" placeholder="phone">
        </div>
        <div class="col-md-6">
            <label asp-for="Person.Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Person.Email" placeholder="email">
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <label asp-for="Person.Bio" class="form-label">Bio</label>
            <textarea type="multitext" class="form-control" asp-for="Person.Bio" placeholder="short bio"  rows="2"></textarea>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-6">
            <h5>Address in USA</h5>
            <label asp-for="Person.USAAddress.StreetName" class="form-label">Street Name</label>
            <input type="text" class="form-control" asp-for="Person.USAAddress.StreetName" placeholder="street name">
            <label asp-for="Person.USAAddress.City" class="form-label">City</label>
            <input type="text" class="form-control" asp-for="Person.USAAddress.City" placeholder="city">
            <label asp-for="Person.USAAddress.State" class="form-label">State</label>
            <select class="form-select" asp-for="Person.USAAddress.State" asp-items="Model.StatesOfUSA"></select>
            <label asp-for="Person.USAAddress.ZipCode" class="form-label">Zip</label>
            <input type="text" class="form-control" asp-for="Person.USAAddress.ZipCode" placeholder="zip">
        </div>
        <div class="col-md-6">
            <h5>Address in Nepal</h5>
            @* <label for="streetName" class="form-label">Street Name</label>
            <input type="text" class="form-control" id="streetName" placeholder="street name"> *@
            <label asp-for="Person.NepalAddress.City" class="form-label">City</label>
            <input type="text" class="form-control" asp-for="Person.NepalAddress.City" placeholder="city">
            <label asp-for="Person.NepalAddress.State" class="form-label">State</label>
            <select class="form-select" asp-for="Person.NepalAddress.State" asp-items="Model.StatesOfNepal">
            </select>
            @* <label for="zip" class="form-label">Zip</label>
            <input type="text" class="form-control" id="zip" placeholder="zip"> *@
        </div>
    </div>
    <div class="mt-3"></div>
    <button class="btn btn-success">Save</button>
    <button class="btn btn-info">Make profile visible</button>
</form>