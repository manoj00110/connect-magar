@model ConnectMagar.Models.Account
@{
    Layout ="_Layout2";
}

<div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" asp-action="Register" asp-controller="Home">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="FirstName" type="text" class="form-control form-control-user"
                                            placeholder="First Name">
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="LastName" type="text" class="form-control form-control-user"
                                            placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" type="email" class="form-control form-control-user"
                                        placeholder="Email Address">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Phone" type="text" class="form-control form-control-user"
                                            placeholder="Phone">
                                    </div>
                                    <div class="col-sm-6">
                                        
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <span class="text-danger small" asp-validation-for="Password"></span>
                                        <input asp-for="Password" type="password" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Password">
                                    </div>
                                    <div class="col-sm-6">
                                        <span class="text-danger small" asp-validation-for="ConfirmPassword"></span>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user"
                                            id="exampleRepeatPassword" placeholder="Repeat Password">
                                    </div>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="termcond">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Terms and conditions.
                                    </label>
                                </div>
                                <button class="btn btn-primary btn-user btn-block mt-3">
                                    Register Account
                                </button>
                                <a href="/" class="btn btn-secondary btn-user btn-block">
                                            Back
                                </a>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Login">Already have an account? Sign in!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>